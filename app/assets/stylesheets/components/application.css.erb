<%= Rouge::Themes::Base16.mode(:light).render(scope: '.highlight') %>

body {
  margin: 0;
  padding: 0;
  font-family: "IBM Plex Sans", "Helvetica Neue", Arial, sans-serif;
  line-height: 1.5;
}

a {
  color: #5e5ee2;
  text-decoration: none;
  border-bottom: 2px solid rgba(94, 94, 226, .2);
}

a:hover {
  border-color: #5e5ee2;
}

p {
  margin: 0 0 2em;
  max-width: 680px;
}

main {
  padding: 40px 60px 60px;
}

pre {
  margin: 0;
  padding: 10px 30px 30px;
  border: 1px solid #dfe3e6;
  background: #f4f7fb;
  font-family: "IBM Plex Sans Mono", "Menlo", "Monaco", monospace;
  font-size: 15px;
}

iframe {
  margin: 0 auto;
  border: none;
}


h1 {
  margin: 0 0 1em;
  padding: 0 0 .5em;
  border-bottom: 2px solid #dfe3e6;
  color: #333;
  font-size: 50px;
  font-weight: 500;
}

h2 {
  color: #333;
  font-weight: 600;
}

ul,
ol {
  margin: 0 0 2em;
}

table {
  margin-bottom: 2em;
  border-collapse: collapse;
}

th,
td {
  padding: .6em 1em .6em 0;
  text-align: left;
}

th {
  border-bottom: 2px solid #dfe3e6;
}

td {
  border-bottom: 1px solid #dfe3e6;
}

hr {
  margin: 2em 0 0;
  padding: 2em 0 0;
  border: 1px solid #dfe3e6;
  border-width: 1px 0 0;
}

nav {
  padding: 20px 30px 40px;
  background: #5e5ee2;
  border-right: 4px solid #5656da;
  color: #fff;
  min-width: 180px;
}

nav a {
  color: #fff;
  text-decoration: none;
}

nav ul {
  list-style: none;
  margin: 0;
  padding: 0;
  font-size: 18px;
  font-weight: 500;
}

nav > ul > li {
  display: block;
  margin: .6em 0 0;
  padding: .6em 0 0;
  box-shadow: 0 -1px 0 0 rgba(255, 255, 255, .1);
}

nav > ul > li:first-child {
  box-shadow: none;
}

nav ul ul {
  margin: .6em 0;
  padding: 0 0;
  font-size: 15px;
  font-weight: 300;
  padding-left: .5em;
}

nav ul ul ul {
  font-size: 14px;
}

.example {
  display: grid;
  margin: 60px 0 0;
  padding: 40px;
  border: 1px solid #dfe3e6;
  border-width: 1px 1px 0;
}

.grid-container {
  display: grid;
  width: 100%;
  height: 100vh;
  grid-gap: 0;
  grid-template-columns: auto 1fr;
}
